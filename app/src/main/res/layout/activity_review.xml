<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#CCE4C3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="리뷰"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="DIGITAL DETOX CHALLENGE"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="106dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:src="@drawable/leaf_test" />

    <!-- 후기 작성 입력 필드 -->
    <EditText
        android:id="@+id/editTextReview"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:gravity="top|start"
        android:hint="후기를 작성하세요."
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <!-- 제출 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSubmitReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성하기"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"/>

    <!-- 리뷰 목록을 표시할 ListView -->

    <!-- 뒤로 가기 버튼 -->
    <ListView
        android:id="@+id/listViewReviews"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/buttonBackToCommunity"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBackToCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="뒤로가기"
        android:background="@drawable/button_background"/>

</LinearLayout>
