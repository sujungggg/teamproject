<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#CCE4C3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="커뮤니티"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="DIGITAL DETOX CHALLENGE"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="101dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:src="@drawable/leaf_test" />

    <!-- 버튼을 가로로 배치하는 LinearLayout -->
    <ListView
        android:id="@+id/listViewPosts"
        android:layout_width="match_parent"
        android:layout_height="420dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <!-- 뒤로가기 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBackToCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_background" />

        <!-- 글쓰기 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCreatePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="글쓰기"
            android:background="@drawable/button_background" />

    </LinearLayout>

</LinearLayout>
