<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 검정색 테두리 -->
    <item>
        <shape>
            <solid android:color="#000000" /> <!-- 테두리 색 -->
            <corners android:radius="30dp" /> <!-- 테두리의 곡률 반경 -->
        </shape>
    </item>

    <!-- 내부 CardView 영역 -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <solid android:color="#6AAE69" /> <!-- CardView 배경색 -->
            <corners android:radius="26dp" /> <!-- 내부 영역의 곡률 반경 -->
        </shape>
    </item>
</layer-list>
